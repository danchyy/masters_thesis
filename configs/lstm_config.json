{
  "exp": {
    "name": "lstm_256",
    "num_of_classes": 101
  },
  "model":{
    "learning_rate": 0.0001,
    "decay": 1e-6,
    "optimizer": "adam"
  },
  "trainer":{
    "num_epochs": 400,
    "batch_size": 32,
    "verbose_training": true,
    "train_split": "cleaned_train01.txt",
    "test_split": "cleaned_test01.txt"
  },
  "callbacks":{
    "save_every_n": 20,
    "checkpoint_monitor": "val_acc",
    "checkpoint_mode": "max",
    "checkpoint_save_best_only": false,
    "checkpoint_save_weights_only": false,
    "checkpoint_verbose": true,
    "tensorboard_write_graph": true
  }
}