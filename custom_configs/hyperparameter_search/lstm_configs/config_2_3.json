{
   "exp": {
      "name": "lstm",
      "num_of_classes": 101
   },
   "data_loader": {
      "name": "lstm_data_loader.LSTMDataLoader"
   },
   "model": {
      "name": "lstm_model.LSTMModel",
      "optimizing": {
         "learning_rate": 1e-05,
         "decay": 1e-06,
         "optimizer": "sgd",
         "momentum": 0.9,
         "nesterov": true
      },
      "return_sequence": true,
      "architecture": {
         "available": true,
         "lstm": [
            1024
         ],
         "bidirectional": true,
         "dropout": [
            0.5
         ],
         "dense": [
            512
         ],
         "dense_dropout": [
            0.5
         ]
      }
   },
   "trainer": {
      "num_epochs": 200,
      "batch_size": 32,
      "verbose_training": true,
      "train_split": "train01.txt",
      "test_split": "validation01.txt"
   },
   "callbacks": {
      "save_every_n": 1,
      "checkpoint_monitor": "val_acc",
      "checkpoint_mode": "max",
      "checkpoint_save_best_only": true,
      "checkpoint_save_weights_only": true,
      "checkpoint_verbose": true,
      "tensorboard_write_graph": true,
      "early_stopping": {
         "available": false,
         "patience": 7,
         "monitor": "val_loss"
      }
   }
}