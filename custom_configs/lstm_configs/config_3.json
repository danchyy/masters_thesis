{
  "exp": {
    "name": "lstm",
    "num_of_classes": 101
  },
  "data_loader": {
    "name": "lstm_data_loader.LSTMDataLoader"
  },
  "model":{
    "name": "lstm_model.LSTMModel",
    "optimizing": {
      "learning_rate": 0.001,
      "decay": 1e-6,
      "optimizer": "adam"
    },
    "return_sequence": true,
    "architecture": {
      "available": true,
      "lstm": [
        2048
      ],
      "bidirectional": false,
      "dropout": [
        0.5
      ],
      "dense": [
        1024
      ],
      "dense_dropout": [
        0.5
      ]
    }
  },
  "trainer":{
    "num_epochs": 50,
    "batch_size": 32,
    "verbose_training": true,
    "train_split": "train01.txt",
    "test_split": "validation01.txt"
  },
  "callbacks":{
    "save_every_n": 1,
    "checkpoint_monitor": "val_acc",
    "checkpoint_mode": "max",
    "checkpoint_save_best_only": true,
    "checkpoint_save_weights_only": true,
    "checkpoint_verbose": true,
    "tensorboard_write_graph": true,
    "early_stopping": {
      "available": true,
      "patience": 7,
      "monitor": "val_loss"
    }
  }
}